# Algoritmo Mayor de 3 Numeros 
VAR
    Int definir y,x,z, sumar como Entero

Inicio
    Escribir ("Ingresa el numero y:");
    Leer y;
    Escribir ("Ingresa el numero x:");
    Leer x;
    Escribir ("Ingresa el nuemro z:");
    Leer z;

    Si y>x entonces
    Si y>z entonces 
      Escribe ("El mayor es", y);
      FinDeSi
  SiNo
    Si x>z entonces 
      Escribe ("El mayor es", x);
    Sino
      Escribe ("El mayor es", z);
      FinDeSi
 FinProceso


 # Algoritmo Nombre De Peliculas
 VAR
    Int definicion Peli como Entero
    Escribe ("Eligw un numero del 1 al 5 para que eligas unas Pelicila:");

Inicio 
    Leer Peli;
    Si  Peli = 1 entonces sera; 
      Escribe ("La pelicula elegida es Blanca Nieves:");
       SiNo
        Si Peli = 2 entonces sera;
          Escribe ("La pelicula eledig es El Conjuro:");
           SiNo
            Si Peli = 3 entoncera sera;
              Escribe ("La pelicula elegida es Que paso ayer:");
               SiNo
                Si peli = 4 entonces sera;
                  Escribe ("La pelicula elegida es AXL:");
                  SiNo
                    Si peli = 5 entonces sera;
                      Escribe ("La pelicula elegida es Rango:");
                       SiNo 
                        Si Peli>5 entonces 
                          Escribe ("Numero Invalido:");
                        FinDeSi
                    FinDeSi
                FinDeSi
            FinDeSi
        FinDeSi
    FinDeSi
FinProceso


# Algoritmo 
VAR
    Int definir z como entero;
    x <-1

Inicio
    Escribir ("Ingresa un numero:");
    Leer z;
    Mientras x<z hacer
    Escribir z;
    x < - x + 1
    FinCantidades
FinProceso


# Algoritmo Promedio de Calificaciones
VAR
    Int definir Cali1, Cali2, Cali3, Promedio como entero;

Inicio
    Escribir ("Primera Calificacion;"):
    Leer Cali1;
    Escribir ("Segunda Calificacion;"):
    Leer Cali2;
    Escribir ("Tercera Calificacion;"):
    Leer Cali3;
    Promedio <-5(Cali1+Cali2+Cali3)/3
    Si Promedio >5 entonces 
       Escribir ("Estas aprobado:");
    SiNo
       Escribir ("Estas reprobado:");
    FinDeSi
FinProceso


# Algoritmo Nombre y Edad
VAR
    Int definir E1, E2, E3 como entero;
    Int definir N1, N2, N3 como caracter;

Inicio
    Escribir ("Ingresa la primera edad:");
    Leer E1;
    Escribir ("Ingresa la segunada edad:");
    Leer E2;
    Escribir ("Ingresa la tercera edad:");
    Leer E3;
    Escribir ("Ingresa la primer nombre:");
    Leer N1;
    Escribir ("Ingresa el segundo nombre:");
    Leer N2;
    Escribir ("Ingresa el tercer nombre:");
    Leer N3;
    Si E1>E2 entonces
      Si E1>E3 entonces
        Escribir ("La persona mayor es:"); N1
      FinDeSI
    SiNo 
      Si E2>E3 entonces 
        Escribir ("La persona mayor es:"); N2
      SiNo
        Escribir ("La persona mayor es:"); N3
      FinDeSi
    FinDeSI
FinProceso 
